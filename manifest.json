{
    "manifest_version": 2,
    "name": "Extension name",
    "description": "a extention for Google Chrome",
    "version": "1.0",
    "icons": {
        "16": "icons/icon_16.png",
        "38": "icons/icon_38.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "38": "icons/icon_38.png"
        },
        "default_title": "Ext title"
    },
    "permissions": [
        "tabs",
        "background",
        "http://*/*",
        "https://*/*"
    ]
}